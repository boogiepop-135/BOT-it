    "overrides": {},
    "scripts": {
        "start": "node build/index.js",
        "dev": "nodemon src/index.ts",
        "dev:refresh": "npm run clean:all && npm install && npm run dev",
        "create-admin": "ts-node scripts/create-admin.ts",
        "verify": "ts-node scripts/verify-whatsbot.ts",
        "test": "echo \"Error: no test specified\" && exit 1",
        "build": "rimraf build && node esbuild.config.js && npm run copy-files",
        "deploy": "node ./index.js",
        "type-check": "tsc --noEmit",
        "lint": "eslint src --ext .ts",
        "clean": "rimraf build",
        "clean:all": "rimraf build && rimraf node_modules",
        "prepare": "husky install",
        "copy-files": "copyfiles -u 0 ./package.json ./.env ./package-lock.json public/**/* build && copyfiles -u 2 src/views/**/* build/views"
    },
    "repository": {
        "type": "git",
