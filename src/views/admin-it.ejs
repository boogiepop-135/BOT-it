  <script>
    // API Base URL Configuration
    const API_BASE_URL = 'https://bot-it-production.up.railway.app';
    
    // Helper para construir URLs de API
    function apiUrl(path) {
      if (path.startsWith('http://') || path.startsWith('https://')) {
        return path;
      }
      if (path.startsWith('/')) {
        return API_BASE_URL + path;
      }
      return API_BASE_URL + '/' + path;
    }

    // Guard: requerir token para acceder al panel
    // Declarar token en scope global para usar en todos los scripts
    var token = localStorage.getItem('authToken');
    if (!token) {
      window.location.replace('/admin/login');
    }
    // Interceptor fetch para adjuntar Authorization por defecto y normalizar URLs
    const _fetch = window.fetch;
    window.fetch = (input, init = {}) => {
      init.headers = init.headers || {};
      if (!String(input).includes('/crm/auth/login')) {
        init.headers['Authorization'] = 'Bearer ' + localStorage.getItem('authToken');
      }
      // Normalizar URL si es relativa
      const url = typeof input === 'string' && (input.startsWith('/') || !input.startsWith('http')) 
        ? apiUrl(input) 
        : input;
      return _fetch(url, init);
    };
  </script>
  <script>
    // --- Gantt Logic ---
    const projectSelect = document.getElementById('projectSelect');
    const reloadBtn = document.getElementById('reloadBtn');
    const viewMode = document.getElementById('viewMode');
    const projectForm = document.getElementById('projectForm');
    const projMsg = document.getElementById('projMsg');
    const taskForm = document.getElementById('taskForm');
    const taskMsg = document.getElementById('taskMsg');
    let gantt = null;
    
    // Token ya est√° declarado globalmente arriba, no redeclarar

    async function fetchJSON(url, options={}) {
      const res = await fetch(url, options);
      if (!res.ok) throw new Error(await res.text());
      return res.json();
    }

    async function loadProjectsForGantt() {
      try {
        const projects = await fetchJSON('/crm/projects', {
          headers: { 'Authorization': `Bearer ${token}` }
        });
        if (projectSelect) {
          projectSelect.innerHTML = '';
          projects.forEach(p => {
            const opt = document.createElement('option');
            opt.value = p._id; opt.textContent = p.name;
            projectSelect.appendChild(opt);
          });
          if (projects.length) await renderGantt(projects[0]._id);
        }
      } catch (error) {
        console.error('Error loading projects:', error);
        if (projectSelect) {
          projectSelect.innerHTML = '<option>Error al cargar proyectos</option>';
        }
      }
    }

    function toDateOnly(d){
      const dt = new Date(d);
      const y = dt.getFullYear();
      const m = String(dt.getMonth()+1).padStart(2,'0');
      const da = String(dt.getDate()).padStart(2,'0');
      return `${y}-${m}-${da}`;
    }

    let currentTasks = [];

    async function renderGantt(projectId){
      try {
        if (!projectId) {
          const el = document.getElementById('gantt');
          const placeholder = document.getElementById('ganttPlaceholder');
          if (el) el.innerHTML = '';
          if (placeholder) placeholder.classList.remove('hidden');
          const tasksSection = document.getElementById('tasksSection');
          if (tasksSection) tasksSection.classList.add('hidden');
          return;
        }
        
        const tasks = await fetchJSON(`/crm/projects/${projectId}/tasks`, {
          headers: { 'Authorization': `Bearer ${token}` }
        });
        currentTasks = tasks;
        
        const el = document.getElementById('gantt');
        const placeholder = document.getElementById('ganttPlaceholder');
        
        if (tasks.length === 0) {
          el.innerHTML = '';
          if (placeholder) {
            placeholder.textContent = 'Este proyecto a√∫n no tiene tareas. Agrega tareas desde la secci√≥n de abajo.';
            placeholder.classList.remove('hidden');
          }
        } else {
          if (placeholder) placeholder.classList.add('hidden');
          const data = tasks.map(t => ({
            id: t._id,
            name: t.name,
            start: toDateOnly(t.startDate || Date.now()),
            end: toDateOnly(t.endDate || Date.now()),
            progress: Number(t.progress || 0),
            dependencies: (t.dependencies||[]).join(',')
          }));
          el.innerHTML='';
          const mode = viewMode?.value || 'Day';
          gantt = new Gantt(el, data, { view_mode: mode, language: 'es' });
          
          // Evento click en barras del Gantt para editar (despu√©s de un delay para que Frappe-Gantt renderice)
          setTimeout(() => {
            el.addEventListener('click', (e) => {
              const bar = e.target.closest('.bar-wrapper, .bar-label');
              if (bar) {
                const taskId = bar.getAttribute('data-id') || e.target.closest('[data-id]')?.getAttribute('data-id');
                if (taskId && window.openTaskEditModal) {
                  window.openTaskEditModal(taskId);
                }
              }
            });
          }, 100);
        }
        
        // Mostrar secci√≥n de tareas cuando hay un proyecto seleccionado
        const tasksSection = document.getElementById('tasksSection');
        if (tasksSection) {
          tasksSection.classList.remove('hidden');
        }
        
        await loadTasksList(projectId);
        updateDependenciesSelectors();
      } catch (error) {
        console.error('Error rendering Gantt:', error);
        const el = document.getElementById('gantt');
        const placeholder = document.getElementById('ganttPlaceholder');
        if (el) el.innerHTML = '';
        if (placeholder) {
          placeholder.textContent = 'Error al cargar tareas del proyecto';
          placeholder.classList.remove('hidden');
        }
        const tasksSection = document.getElementById('tasksSection');
        if (tasksSection) tasksSection.classList.add('hidden');
      }
    }

    async function loadTasksList(projectId) {
      const tasksList = document.getElementById('tasksList');
      if (!tasksList) return;
      try {
        const tasks = await fetchJSON(`/crm/projects/${projectId}/tasks`, {
          headers: { 'Authorization': `Bearer ${token}` }
        });
      tasksList.innerHTML = '';
      if (tasks.length === 0) {
        tasksList.innerHTML = '<p class="text-gray-500 text-sm text-center py-4">No hay tareas en este proyecto</p>';
        return;
      }
      
      // Agrupar tareas por estado
      const statusGroups = {
        'todo': [],
        'doing': [],
        'done': []
      };
      
      tasks.forEach(t => {
        const status = t.status || 'todo';
        if (statusGroups[status]) {
          statusGroups[status].push(t);
        } else {
          statusGroups['todo'].push(t);
        }
      });
      
      // Renderizar cada grupo
      Object.entries(statusGroups).forEach(([status, statusTasks]) => {
        if (statusTasks.length === 0) return;
        
        const statusNames = {
          'todo': 'üìã Por Hacer',
          'doing': 'üöÄ En Progreso',
          'done': '‚úÖ Completadas'
        };
        
        const statusColors = {
          'todo': 'border-gray-300 bg-gray-50',
          'doing': 'border-blue-300 bg-blue-50',
          'done': 'border-green-300 bg-green-50'
        };
        
        const groupDiv = document.createElement('div');
        groupDiv.className = `mb-4 ${statusColors[status] || statusColors.todo}`;
        groupDiv.innerHTML = `<h4 class="font-semibold text-gray-700 mb-2 px-3 pt-3">${statusNames[status]} (${statusTasks.length})</h4>`;
        
        const tasksContainer = document.createElement('div');
        tasksContainer.className = 'space-y-2 px-3 pb-3';
        
        statusTasks.forEach(t => {
          const progress = t.progress || 0;
          const isDone = t.status === 'done';
          const taskId = t._id;
          
          const taskDiv = document.createElement('div');
          taskDiv.className = `bg-white rounded-lg shadow-sm p-4 border-2 transition-all duration-200 ${isDone ? 'border-green-400 bg-green-50' : 'border-gray-200'}`;
          taskDiv.id = `task-${taskId}`;
          
          taskDiv.innerHTML = `
            <div class="flex items-start gap-4 mb-3">
              <div class="flex items-center pt-1 flex-shrink-0">
                <input type="checkbox" 
                       id="task-checkbox-${taskId}" 
                       ${isDone ? 'checked' : ''}
                       class="w-6 h-6 text-green-600 border-2 border-gray-400 rounded focus:ring-2 focus:ring-green-500 focus:ring-offset-2 cursor-pointer transition-all shadow-sm hover:border-green-500"
                       onchange="toggleTaskComplete('${taskId}', this.checked)"
                       title="${isDone ? 'Desmarcar como completada' : 'Marcar como completada'}">
              </div>
              <div class="flex-1 min-w-0">
                <h5 class="font-semibold text-gray-800 mb-1 ${isDone ? 'line-through text-gray-500' : ''}">
                  ${t.name}
                </h5>
                ${t.description ? `<p class="text-sm text-gray-600 mb-2 ${isDone ? 'line-through text-gray-400' : ''}">${t.description}</p>` : ''}
                <div class="mb-2 mt-2">
                  <div class="flex justify-between text-xs mb-1">
                    <span class="font-medium text-gray-600">Progreso</span>
                    <span class="font-bold ${isDone ? 'text-green-600' : 'text-gray-800'}">${progress}%</span>
                  </div>
                  <div class="w-full bg-gray-200 rounded-full h-2.5 overflow-hidden shadow-inner">
                    <div class="${isDone ? 'bg-green-600' : 'bg-blue-600'} h-2.5 rounded-full transition-all duration-300" style="width: ${progress}%"></div>
                  </div>
                </div>
                <div class="flex items-center justify-between text-xs text-gray-500 mt-2">
                  <div class="flex items-center gap-3 flex-wrap">
                    ${t.startDate ? `<span><i class="fas fa-calendar-alt mr-1"></i>Inicio: ${new Date(t.startDate).toLocaleDateString('es-MX')}</span>` : ''}
                    ${t.endDate ? `<span><i class="fas fa-calendar-check mr-1"></i>Fin: ${new Date(t.endDate).toLocaleDateString('es-MX')}</span>` : ''}
                  </div>
                  <div class="flex items-center gap-2">
                    ${t.dependencies?.length > 0 ? `<span class="text-blue-600"><i class="fas fa-link mr-1"></i>${t.dependencies.length}</span>` : ''}
                    ${isDone ? '<span class="text-green-600 font-semibold"><i class="fas fa-check-circle mr-1"></i>Completada</span>' : ''}
                  </div>
                </div>
              </div>
              <div class="flex gap-2 ml-3 flex-shrink-0">
                <button onclick="openTaskEditModal('${taskId}')" class="bg-blue-600 hover:bg-blue-700 text-white px-3 py-2 rounded-lg text-sm transition-colors shadow-sm hover:shadow" title="Editar tarea">
                  <i class="fas fa-edit"></i>
                </button>
                <button onclick="deleteTask('${taskId}')" class="bg-red-600 hover:bg-red-700 text-white px-3 py-2 rounded-lg text-sm transition-colors shadow-sm hover:shadow" title="Eliminar tarea">
                  <i class="fas fa-trash"></i>
                </button>
              </div>
            </div>
          `;
          tasksContainer.appendChild(taskDiv);
        });
        
        groupDiv.appendChild(tasksContainer);
        tasksList.appendChild(groupDiv);
      });
      } catch (error) {
        console.error('Error loading tasks:', error);
        tasksList.innerHTML = '<p class="text-red-500 text-sm text-center py-4">Error al cargar tareas</p>';
      }
    }
    
    function generateProgressBar(progress) {
      const filled = Math.round(progress / 10);
      const empty = 10 - filled;
      return '‚ñà'.repeat(filled) + '‚ñë'.repeat(empty);
    }

    function updateDependenciesSelectors() {
      const taskDeps = document.getElementById('taskDependencies');
      const editDeps = document.getElementById('editTaskDependencies');
      const currentId = projectSelect?.value;
      if (!currentId || !currentTasks.length) return;
      
      [taskDeps, editDeps].forEach(sel => {
        if (!sel) return;
        const currentVal = Array.from(sel.selectedOptions).map(o => o.value).filter(v => v);
        sel.innerHTML = '<option value="">Sin dependencias</option>';
        currentTasks.forEach(t => {
          const opt = document.createElement('option');
          opt.value = t._id;
          opt.textContent = t.name;
          if (currentVal.includes(t._id)) opt.selected = true;
          sel.appendChild(opt);
        });
      });
    }

    projectSelect?.addEventListener('change', () => renderGantt(projectSelect.value));
    reloadBtn?.addEventListener('click', () => renderGantt(projectSelect.value));
    viewMode?.addEventListener('change', () => gantt?.change_view_mode(viewMode.value));

    taskForm?.addEventListener('submit', async (e)=>{
      e.preventDefault(); taskMsg.textContent='';
      try{
        const deps = Array.from(document.getElementById('taskDependencies').selectedOptions)
          .map(o => o.value).filter(v => v);
        const body = {
          name: document.getElementById('taskName').value.trim(),
          startDate: document.getElementById('taskStart').value,
          endDate: document.getElementById('taskEnd').value,
          progress: Number(document.getElementById('taskProgress').value||0),
          dependencies: deps
        };
        if (!body.name) throw new Error('Nombre requerido');
        await fetchJSON(`/crm/projects/${projectSelect.value}/tasks`, {
          method:'POST', 
          headers:{
            'Content-Type':'application/json',
            'Authorization': `Bearer ${token}`
          }, 
          body: JSON.stringify(body)
        });
        taskForm.reset();
        await renderGantt(projectSelect.value);
        await loadTasksList(projectSelect.value);
        await updateProjectProgress();
      }catch(err){
        taskMsg.textContent = 'Error al crear: ' + (err.message || '');
      }
    });

    // init on load
    loadProjectsForGantt().catch(()=>{
      if (projectSelect) projectSelect.innerHTML = '<option>No hay proyectos</option>';
    });

    projectForm?.addEventListener('submit', async (e)=>{
      e.preventDefault();
      e.stopPropagation(); // Evitar propagaci√≥n adicional
      
      const projMsg = document.getElementById('projMsg');
      if (projMsg) projMsg.textContent = '';
      
      const submitBtn = projectForm.querySelector('button[type="submit"]');
      const originalText = submitBtn?.innerHTML;
      
      try{
        if (submitBtn) {
          submitBtn.disabled = true;
          submitBtn.innerHTML = '<i class="fas fa-spinner fa-spin mr-2"></i>Creando...';
        }
        
        const projNameInput = document.getElementById('projName');
        const projStartInput = document.getElementById('projStart');
        const projEndInput = document.getElementById('projEnd');
        
        if (!projNameInput) throw new Error('Campo nombre no encontrado');
        
        const name = projNameInput.value.trim();
        if (!name) {
          throw new Error('El nombre del proyecto es requerido');
        }
        
        const startDateValue = projStartInput?.value || '';
        const endDateValue = projEndInput?.value || '';
        
        // Construir body solo con campos que tienen valor (MongoDB no acepta undefined bien)
        const body = {
          name: name,
          progress: 0,
          priority: 'medium'
        };
        
        // Solo agregar fechas si tienen valor
        if (startDateValue) {
          body.startDate = new Date(startDateValue).toISOString();
        }
        if (endDateValue) {
          body.endDate = new Date(endDateValue).toISOString();
        }
        
        console.log('Creando proyecto con body:', body);
        
        const response = await fetch('/crm/projects', { 
          method:'POST', 
          headers:{
            'Content-Type':'application/json',
            'Authorization': `Bearer ${token}`
          }, 
          body: JSON.stringify(body) 
        });
        
        if (!response.ok) {
          const errorText = await response.text();
          let errorData;
          try {
            errorData = JSON.parse(errorText);
          } catch {
            errorData = { error: errorText || 'Error desconocido' };
          }
          throw new Error(errorData.error || `Error ${response.status}: ${response.statusText}`);
        }
        
        const result = await response.json();
        console.log('Proyecto creado exitosamente:', result);
        
        // Limpiar formulario
        projectForm.reset();
        if (projMsg) {
          projMsg.textContent = '‚úÖ Proyecto creado exitosamente';
          projMsg.className = 'text-sm text-green-600 h-5 mt-2';
        }
        
        // Recargar lista de proyectos
        await loadProjectsForGantt();
        
        // Seleccionar el proyecto reci√©n creado
        if (projectSelect && result._id) {
          projectSelect.value = result._id;
          await renderGantt(result._id);
        }
        
        setTimeout(() => {
          if (projMsg) {
            projMsg.textContent = '';
            projMsg.className = 'text-sm text-red-600 h-5 mt-2';
          }
        }, 3000);
      } catch(err) { 
        console.error('Error creating project:', err);
        const errorMsg = err.message || 'Error desconocido';
        if (projMsg) {
          projMsg.textContent = '‚ùå Error al crear proyecto: ' + errorMsg; 
          projMsg.className = 'text-sm text-red-600 h-5 mt-2';
        }
        alert('Error al crear proyecto: ' + errorMsg);
      } finally {
