          if (originalText) submitBtn.innerHTML = originalText;
        }
      }
    });

    // Funci√≥n para marcar/desmarcar tarea como completada
    window.toggleTaskComplete = async function(taskId, isComplete) {
      try {
        const checkbox = document.getElementById(`task-checkbox-${taskId}`);
        if (checkbox) checkbox.disabled = true;
        
        const task = currentTasks.find(t => t._id === taskId);
        if (!task) {
          alert('Tarea no encontrada');
          if (checkbox) checkbox.disabled = false;
          return;
        }
        
        const newStatus = isComplete ? 'done' : 'todo';
        const newProgress = isComplete ? 100 : 0;
        
        const response = await fetch(`/crm/projects/${projectSelect.value}/tasks/${taskId}`, {
          method: 'PUT',
          headers: {
            'Content-Type': 'application/json',
            'Authorization': `Bearer ${token}`
          },
          body: JSON.stringify({
            ...task,
            status: newStatus,
            progress: newProgress
          })
        });
        
        if (!response.ok) {
          const errorData = await response.json().catch(() => ({ error: 'Error desconocido' }));
          throw new Error(errorData.error || 'Error al actualizar tarea');
        }
        
        // Actualizar la lista de tareas
        await loadTasksList(projectSelect.value);
        await renderGantt(projectSelect.value);
        
        // Recalcular progreso del proyecto
        await updateProjectProgress();
        
      } catch (error) {
        console.error('Error toggling task:', error);
        alert('Error al actualizar tarea: ' + error.message);
        // Revertir checkbox
        const checkbox = document.getElementById(`task-checkbox-${taskId}`);
        if (checkbox) {
          checkbox.checked = !isComplete;
          checkbox.disabled = false;
        }
      }
    };
    
    // Funci√≥n para recalcular y actualizar el progreso del proyecto basado en las tareas
    async function updateProjectProgress() {
      try {
        const projectId = projectSelect?.value;
        if (!projectId) return;
        
        const tasks = await fetchJSON(`/crm/projects/${projectId}/tasks`, {
          headers: { 'Authorization': `Bearer ${token}` }
        });
        
        if (tasks.length === 0) {
          // Sin tareas, progreso es 0
          await fetch(`/crm/projects/${projectId}`, {
            method: 'PUT',
            headers: {
              'Content-Type': 'application/json',
              'Authorization': `Bearer ${token}`
            },
            body: JSON.stringify({ progress: 0 })
          });
          return;
        }
        
        // Calcular progreso promedio de las tareas
        const totalProgress = tasks.reduce((sum, t) => sum + (t.progress || 0), 0);
        const averageProgress = Math.round(totalProgress / tasks.length);
        
        // Contar tareas completadas
        const completedTasks = tasks.filter(t => t.status === 'done').length;
        const totalTasks = tasks.length;
        const completionPercentage = Math.round((completedTasks / totalTasks) * 100);
        
        // Usar el promedio entre progreso promedio y porcentaje de completadas
        const finalProgress = Math.round((averageProgress + completionPercentage) / 2);
        
        // Determinar estado del proyecto
        let newStatus = 'planned';
        if (completedTasks === totalTasks) {
          newStatus = 'done';
        } else if (completedTasks > 0) {
          newStatus = 'in_progress';
        }
        
        // Actualizar proyecto
        await fetch(`/crm/projects/${projectId}`, {
          method: 'PUT',
          headers: {
            'Content-Type': 'application/json',
            'Authorization': `Bearer ${token}`
          },
          body: JSON.stringify({ 
            progress: finalProgress,
            status: newStatus
          })
        });
        
        // Actualizar el selector de proyectos para reflejar el nuevo progreso
        await loadProjectsForGantt();
        
      } catch (error) {
        console.error('Error updating project progress:', error);
      }
    }

    // Funciones globales para editar/eliminar tareas
    window.openTaskEditModal = async function(taskId) {
      const task = currentTasks.find(t => t._id === taskId);
      if (!task) return;
      const modal = document.getElementById('taskEditModal');
      document.getElementById('editTaskId').value = taskId;
      document.getElementById('editTaskName').value = task.name || '';
      document.getElementById('editTaskProgress').value = task.progress || 0;
      document.getElementById('editTaskStart').value = toDateOnly(task.startDate || Date.now());
      document.getElementById('editTaskEnd').value = toDateOnly(task.endDate || Date.now());
      updateDependenciesSelectors();
      // Marcar dependencias actuales
      const depsSelect = document.getElementById('editTaskDependencies');
      Array.from(depsSelect.options).forEach(opt => {
        opt.selected = task.dependencies?.includes(opt.value);
      });
      modal.classList.remove('hidden');
      modal.classList.add('flex');
    };

    window.closeTaskEditModal = function() {
      const modal = document.getElementById('taskEditModal');
      modal.classList.add('hidden');
      modal.classList.remove('flex');
      document.getElementById('taskEditForm').reset();
    };

    window.deleteTaskFromModal = async function() {
      const taskId = document.getElementById('editTaskId').value;
      if (taskId && confirm('¬øEst√°s seguro de eliminar esta tarea?')) {
        try {
          await fetchJSON(`/crm/projects/${projectSelect.value}/tasks/${taskId}`, { 
            method: 'DELETE',
            headers: { 'Authorization': `Bearer ${token}` }
          });
          closeTaskEditModal();
          await renderGantt(projectSelect.value);
          await loadTasksList(projectSelect.value);
          await updateProjectProgress();
        } catch(err) {
          alert('Error al eliminar: ' + (err.message || ''));
        }
      }
    };

    window.deleteTask = async function(taskId) {
      if (!taskId || !confirm('¬øEst√°s seguro de eliminar esta tarea?')) return;
      try {
        await fetchJSON(`/crm/projects/${projectSelect.value}/tasks/${taskId}`, { 
