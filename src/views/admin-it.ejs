  <script>
    // API Base URL Configuration
    const API_BASE_URL = 'https://bot-it-production.up.railway.app';
    
    // Helper para construir URLs de API
    function apiUrl(path) {
      if (path.startsWith('http://') || path.startsWith('https://')) {
        return path;
      }
      if (path.startsWith('/')) {
        return API_BASE_URL + path;
      }
      return API_BASE_URL + '/' + path;
    }

    // Guard: requerir token para acceder al panel
    (function(){
      const token = localStorage.getItem('authToken');
      if (!token) {
        window.location.replace('/admin/login');
      }
      // Interceptor fetch para adjuntar Authorization por defecto y normalizar URLs
      const _fetch = window.fetch;
      window.fetch = (input, init = {}) => {
        init.headers = init.headers || {};
        if (!String(input).includes('/crm/auth/login')) {
          init.headers['Authorization'] = 'Bearer ' + localStorage.getItem('authToken');
        }
        // Normalizar URL si es relativa
        const url = typeof input === 'string' && (input.startsWith('/') || !input.startsWith('http')) 
          ? apiUrl(input) 
          : input;
        return _fetch(url, init);
      };
    })();
  </script>
  <script>
    // --- Gantt Logic ---
    const projectSelect = document.getElementById('projectSelect');
    const reloadBtn = document.getElementById('reloadBtn');
    const viewMode = document.getElementById('viewMode');
    const projectForm = document.getElementById('projectForm');
    const projMsg = document.getElementById('projMsg');
    const taskForm = document.getElementById('taskForm');
    const taskMsg = document.getElementById('taskMsg');
    let gantt = null;

    async function fetchJSON(url, options={}) {
      const res = await fetch(url, options);
      if (!res.ok) throw new Error(await res.text());
      return res.json();
    }

    async function loadProjectsForGantt() {
      const projects = await fetchJSON('/crm/projects');
      projectSelect.innerHTML = '';
      projects.forEach(p => {
        const opt = document.createElement('option');
        opt.value = p._id; opt.textContent = p.name;
        projectSelect.appendChild(opt);
      });
      if (projects.length) await renderGantt(projects[0]._id);
    }

    function toDateOnly(d){
      const dt = new Date(d);
      const y = dt.getFullYear();
      const m = String(dt.getMonth()+1).padStart(2,'0');
      const da = String(dt.getDate()).padStart(2,'0');
      return `${y}-${m}-${da}`;
    }

    let currentTasks = [];

    async function renderGantt(projectId){
      const tasks = await fetchJSON(`/crm/projects/${projectId}/tasks`);
      currentTasks = tasks;
      const data = tasks.map(t => ({
        id: t._id,
        name: t.name,
        start: toDateOnly(t.startDate || Date.now()),
        end: toDateOnly(t.endDate || Date.now()),
        progress: Number(t.progress || 0),
        dependencies: (t.dependencies||[]).join(',')
      }));
      const el = document.getElementById('gantt');
      el.innerHTML='';
      const mode = viewMode?.value || 'Day';
      gantt = new Gantt(el, data, { view_mode: mode, language: 'es' });
      
      // Evento click en barras del Gantt para editar (después de un delay para que Frappe-Gantt renderice)
      setTimeout(() => {
        el.addEventListener('click', (e) => {
          const bar = e.target.closest('.bar-wrapper, .bar-label');
          if (bar) {
            const taskId = bar.getAttribute('data-id') || e.target.closest('[data-id]')?.getAttribute('data-id');
            if (taskId && window.openTaskEditModal) {
              window.openTaskEditModal(taskId);
            }
          }
        });
      }, 100);
      
      await loadTasksList(projectId);
      updateDependenciesSelectors();
    }

    async function loadTasksList(projectId) {
      const tasksList = document.getElementById('tasksList');
      if (!tasksList) return;
      const tasks = await fetchJSON(`/crm/projects/${projectId}/tasks`);
      tasksList.innerHTML = '';
      if (tasks.length === 0) {
        tasksList.innerHTML = '<p class="text-gray-500 text-sm">No hay tareas en este proyecto</p>';
        return;
      }
      tasks.forEach(t => {
        const div = document.createElement('div');
        div.className = 'flex items-center justify-between p-3 border rounded bg-gray-50';
        div.innerHTML = `
          <div class="flex-1">
            <span class="font-medium">${t.name}</span>
            <span class="text-sm text-gray-500 ml-2">(${t.progress || 0}%)</span>
            ${t.dependencies?.length ? `<span class="text-xs text-blue-600 ml-2">Deps: ${t.dependencies.length}</span>` : ''}
          </div>
          <div class="flex gap-2">
            <button onclick="openTaskEditModal('${t._id}')" class="bg-blue-600 hover:bg-blue-700 text-white px-3 py-1 rounded text-sm">Editar</button>
            <button onclick="deleteTask('${t._id}')" class="bg-red-600 hover:bg-red-700 text-white px-3 py-1 rounded text-sm">Eliminar</button>
          </div>
        `;
        tasksList.appendChild(div);
      });
    }

    function updateDependenciesSelectors() {
      const taskDeps = document.getElementById('taskDependencies');
      const editDeps = document.getElementById('editTaskDependencies');
      const currentId = projectSelect?.value;
      if (!currentId || !currentTasks.length) return;
      
      [taskDeps, editDeps].forEach(sel => {
        if (!sel) return;
        const currentVal = Array.from(sel.selectedOptions).map(o => o.value).filter(v => v);
        sel.innerHTML = '<option value="">Sin dependencias</option>';
        currentTasks.forEach(t => {
          const opt = document.createElement('option');
          opt.value = t._id;
          opt.textContent = t.name;
          if (currentVal.includes(t._id)) opt.selected = true;
          sel.appendChild(opt);
        });
      });
    }

    projectSelect?.addEventListener('change', () => renderGantt(projectSelect.value));
    reloadBtn?.addEventListener('click', () => renderGantt(projectSelect.value));
    viewMode?.addEventListener('change', () => gantt?.change_view_mode(viewMode.value));

    taskForm?.addEventListener('submit', async (e)=>{
      e.preventDefault(); taskMsg.textContent='';
      try{
        const deps = Array.from(document.getElementById('taskDependencies').selectedOptions)
          .map(o => o.value).filter(v => v);
        const body = {
          name: document.getElementById('taskName').value.trim(),
          startDate: document.getElementById('taskStart').value,
          endDate: document.getElementById('taskEnd').value,
          progress: Number(document.getElementById('taskProgress').value||0),
          dependencies: deps
        };
        if (!body.name) throw new Error('Nombre requerido');
        await fetchJSON(`/crm/projects/${projectSelect.value}/tasks`, {
          method:'POST', headers:{'Content-Type':'application/json'}, body: JSON.stringify(body)
        });
        taskForm.reset();
        await renderGantt(projectSelect.value);
      }catch(err){
        taskMsg.textContent = 'Error al crear: ' + (err.message || '');
      }
    });

    // init on load
    loadProjectsForGantt().catch(()=>{
      if (projectSelect) projectSelect.innerHTML = '<option>No hay proyectos</option>';
    });

    projectForm?.addEventListener('submit', async (e)=>{
      e.preventDefault(); projMsg.textContent='';
      try{
        const body = {
          name: document.getElementById('projName').value.trim(),
          status: 'planned',
          startDate: document.getElementById('projStart').value || undefined,
          endDate: document.getElementById('projEnd').value || undefined
        };
        if (!body.name) throw new Error('Nombre requerido');
        await fetchJSON('/crm/projects', { method:'POST', headers:{'Content-Type':'application/json'}, body: JSON.stringify(body) });
        projectForm.reset();
        await loadProjectsForGantt();
      }catch(err){ projMsg.textContent = 'Error al crear proyecto: ' + (err.message||''); }
    });

    // Funciones globales para editar/eliminar tareas
    window.openTaskEditModal = async function(taskId) {
      const task = currentTasks.find(t => t._id === taskId);
      if (!task) return;
      const modal = document.getElementById('taskEditModal');
      document.getElementById('editTaskId').value = taskId;
      document.getElementById('editTaskName').value = task.name || '';
      document.getElementById('editTaskProgress').value = task.progress || 0;
      document.getElementById('editTaskStart').value = toDateOnly(task.startDate || Date.now());
      document.getElementById('editTaskEnd').value = toDateOnly(task.endDate || Date.now());
      updateDependenciesSelectors();
      // Marcar dependencias actuales
      const depsSelect = document.getElementById('editTaskDependencies');
      Array.from(depsSelect.options).forEach(opt => {
        opt.selected = task.dependencies?.includes(opt.value);
      });
      modal.classList.remove('hidden');
      modal.classList.add('flex');
    };

    window.closeTaskEditModal = function() {
      const modal = document.getElementById('taskEditModal');
      modal.classList.add('hidden');
      modal.classList.remove('flex');
      document.getElementById('taskEditForm').reset();
    };

    window.deleteTaskFromModal = async function() {
      const taskId = document.getElementById('editTaskId').value;
      if (taskId && confirm('¿Estás seguro de eliminar esta tarea?')) {
        try {
          await fetchJSON(`/crm/projects/${projectSelect.value}/tasks/${taskId}`, { method: 'DELETE' });
          closeTaskEditModal();
          await renderGantt(projectSelect.value);
        } catch(err) {
          alert('Error al eliminar: ' + (err.message || ''));
        }
      }
    };

    window.deleteTask = async function(taskId) {
      if (!taskId || !confirm('¿Estás seguro de eliminar esta tarea?')) return;
      try {
        await fetchJSON(`/crm/projects/${projectSelect.value}/tasks/${taskId}`, { method: 'DELETE' });
        await renderGantt(projectSelect.value);
      } catch(err) {
        alert('Error al eliminar: ' + (err.message || ''));
      }
    };

    // Formulario de edición de tareas
    document.getElementById('taskEditForm')?.addEventListener('submit', async (e) => {
      e.preventDefault();
      const taskId = document.getElementById('editTaskId').value;
      if (!taskId) return;
      try {
        const deps = Array.from(document.getElementById('editTaskDependencies').selectedOptions)
          .map(o => o.value).filter(v => v);
        const body = {
          name: document.getElementById('editTaskName').value.trim(),
          startDate: document.getElementById('editTaskStart').value,
          endDate: document.getElementById('editTaskEnd').value,
          progress: Number(document.getElementById('editTaskProgress').value || 0),
          dependencies: deps
        };
        if (!body.name) throw new Error('Nombre requerido');
        await fetchJSON(`/crm/projects/${projectSelect.value}/tasks/${taskId}`, {
          method: 'PUT',
          headers: { 'Content-Type': 'application/json' },
          body: JSON.stringify(body)
        });
        closeTaskEditModal();
        await renderGantt(projectSelect.value);
      } catch(err) {
        alert('Error al actualizar: ' + (err.message || ''));
      }
    });
  </script>
