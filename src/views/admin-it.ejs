    // Polling m√°s eficiente: cada 10 segundos cuando est√° conectado, cada 5 cuando no
    let statusPollInterval = 10000; // 10 segundos por defecto cuando est√° conectado
    let statusInterval = null;
    
    function startStatusPolling() {
        checkWhatsAppStatus().then(isConnected => {
            // Ajustar intervalo basado en el estado
            const newInterval = isConnected ? 10000 : 5000;
            if (newInterval !== statusPollInterval) {
                statusPollInterval = newInterval;
                if (statusInterval) {
                    clearInterval(statusInterval);
                }
                statusInterval = setInterval(startStatusPolling, statusPollInterval);
            }
        });
    }
    
